# contents of this file are set by chef (hadoop_cluster/recipes/cluster_conf)

export HADOOP_HOME=/usr/lib/<%= node[:hadoop][:hadoop_handle] %>
export HADOOP_IDENT_STRING=hadoop
export HADOOP_NODENAME="<%= node.name.gsub(/[^\w\-]+/, '') %>"

export HADOOP_NAMENODE_USER=hdfs
export HADOOP_SECONDARYNAMENODE_USER=hdfs
export HADOOP_DATANODE_USER=hdfs
export HADOOP_JOBTRACKER_USER=mapred
export HADOOP_TASKTRACKER_USER=mapred

# The maximum amount of heap to use, in MB. Default is 1000.
export HADOOP_HEAPSIZE=<%= node[:hadoop][:daemon_heapsize] %>

# Ubuntu wants us to use IPv6. Hadoop doesn't support that, but nevertheless binds to :::50010. Let's tell it we don't agree.
export HADOOP_OPTS="$HADOOP_OPTS -Djava.net.preferIPv4Stack=true"

export HADOOP_NAMENODE_OPTS="$HADOOP_NAMENODE_OPTS -XX:+UseParallelGC -Xmx<%=                   node[:hadoop][:namenode_heapsize]          || node[:hadoop][:daemon_heapsize] %>m"
export HADOOP_SECONDARYNAMENODE_OPTS="$HADOOP_SECONDARYNAMENODE_OPTS -XX:+UseParallelGC -Xmx<%= node[:hadoop][:secondarynamenode_heapsize] || node[:hadoop][:daemon_heapsize] %>m"
export HADOOP_JOBTRACKER_OPTS="$HADOOP_JOBTRACKER_OPTS -XX:+UseParallelGC -Xmx<%=               node[:hadoop][:jobtracker_heapsize]        || node[:hadoop][:daemon_heapsize] %>m"

<%- unless node[:hadoop][:extra_classpaths].nil? %>
# Extra classpaths for hadoop
export HADOOP_CLASSPATH="<%= node[:hadoop][:extra_classpaths].values.join(":") %>:$HADOOP_CLASSPATH"
<%- end %>
