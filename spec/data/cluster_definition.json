{
  "cluster_definition": {
    "channel_id": "channel_1",
    "name": "hadoop_cluster_test",
    "template_id": "centos-5.7-template",
    "distro": "apache",
    "distro_map": {
       "hadoop": "http://localhost/distros/apache/hadoop.tar.gz",
       "pig": "http://localhost/distros/apache/pig.tar.gz",
       "hive": "http://localhost/distros/apache/hive.tar.gz"
    },
    "groups": [
      {
        "name": "master",
        "roles": ["hadoop", "hadoop_namenode", "hadoop_jobtracker"],
        "instance_num": 1,
        "cpu": 2, // CPU core number
        "memory": 2048, // 2048M
        "networking": {
          "port_group": "CFNetwork"
        },
        "storage": {
          "type": "shared",
          "size": 5 // 5G
        }
      },
      {
        "name": "worker",
        "roles": ["hadoop", "hadoop_worker"],
        "instance_num": 3,
        "cpu": 1,
        "memory": 1024,
        "networking": {
          "port_group": "CFNetwork"
        },
        "storage": {
          "type": "shared",
          "size": 5
        }
      },
      {
        "name": "client",
        "roles": ["hadoop_client", "hive", "pig"],
        "instance_num": 1,
        "cpu": 1,
        "memory": 1024,
        "networking": {
          "port_group": "CFNetwork"
        },
        "storage": {
          "type": "shared",
          "size": 5
        }
      }
    ]
  },
  "cloud_provider": {
    "name": "vsphere",
    "vc_addr": "10.141.7.39",
    "vc_user": "administrator",
    "vc_pwd": "ca$hc0w",
    "vc_datacenter": "Datacenter2012",
    "vc_clusters": [
      {
        "name": "cluster-ironfan",
        "vc_rps": ["IronfanRP"]
      }
    ],
    "vc_shared_datastore_pattern": [ "ds-ironfan" ],
    "vc_local_datastare_pattern": [ "ds-ironfan" ],
    "cloud_adapter": "fog"
  }
}
